{
    "manifest_version": 3,
    "name": "PrettyLinks Manager",
    "version": "1.0",
    "description": "Manage WordPress PrettyLinks from your browser",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "host_permissions": [
        "http://localhost:*/*",
        "https://*/"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "web_accessible_resources": [{
        "resources": ["images/logo.png"],
        "matches": ["<all_urls>"]
    }]
}